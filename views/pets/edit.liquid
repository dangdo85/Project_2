{% layout 'layout.liquid' %}

{% block content %}
<div class="container-md">
    <form action="/adopt-a-paw/pets/{{pet._id}}?_method=PUT" method="POST">
        <fieldset>
            <legend>Edit Pet Post</legend>
            <label class="form-label">Title:</label>
            <input 
                type="text" 
                name="title" 
                placeholder="enter title"
                class="form-control"
                value="{{pet.title}}"
            >
            <label class="form-label">Cost:</label>
            <input 
                type="text" 
                name="cost" 
                placeholder="enter cost"
                class="form-control"
                value="{{pet.cost}}"
            >
            <label class="form-label">Name:</label>
            <input 
                type="text" 
                name="name" 
                placeholder="enter name"
                class="form-control"
                value="{{pet.name}}"
            >
            <label class="form-label">Species:</label>
            <input 
                type="text" 
                name="species" 
                placeholder="enter species"
                class="form-control"
                value="{{pet.species}}"
            >
            <label class="form-label">Breed:</label>
            <input 
                type="text" 
                name="breed" 
                placeholder="enter breed"
                class="form-control"
                value="{{pet.breed}}"
            >
            <label class="form-label">Sex:</label>
            <input 
                type="text" 
                name="sex" 
                placeholder="enter sex of pet"
                class="form-control"
                value="{{pet.sex}}"
            >
            <label class="form-label">Age:</label>
            <input 
                type="text" 
                name="age" 
                placeholder="enter age of pet"
                class="form-control"
                value="{{pet.age}}"
            >
            <label class="form-label">Color:</label>
            <input 
                type="text" 
                name="color" 
                placeholder="enter color of pet"
                class="form-control"
                value="{{pet.color}}"
            >
            <label class="form-label">Size:</label>
            <input 
                type="text" 
                name="size" 
                placeholder="enter size of pet"
                class="form-control"
                value="{{pet.size}}"
            >
            <label class="form-label">Other descriptions:</label>
            <input 
                type="text" 
                name="other_descriptions" 
                placeholder="enter other descriptions"
                class="form-control"
                value="{{pet.other_descriptions}}"
            >
            <label class="form-label">Location:</label>
            <input 
                type="text" 
                name="location" 
                placeholder="enter location"
                class="form-control"
                value="{{pet.location}}"
            >
            <label class="form-label">Name of contact:</label>
            <input 
                type="text" 
                name="name_of_contact" 
                placeholder="enter name of contact"
                class="form-control"
                value="{{pet.name_of_contact}}"
            >
            <label class="form-label">Contact info:</label>
            <input 
                type="text" 
                name="contact_info" 
                placeholder="enter contact info"
                class="form-control"
                value="{{pet.contact_info}}"
            >
            <label class="form-label">Images:</label>
            <input 
                type="text" 
                name="images" 
                placeholder="enter image url"
                class="form-control"
                value="{{pet.images}}"
            >
        </fieldset>
        <div class="btn-group">
            <input type="submit" value="Edit post" class="btn btn-success">
            <a href="/adopt-a-paw/pets/index" class="btn btn-warning">Nevermind</a>
        </div>
    </form>
</div>
<style>
body {
    background-image: url("https://us.123rf.com/450wm/elovich/elovich1704/elovich170400349/75383483-white-wood-texture-background-wooden-table-top-view.jpg?ver=6")
} 
</style>
{% endblock %}