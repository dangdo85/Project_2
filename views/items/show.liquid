{% layout 'layout.liquid' %}

{% block content %}
<a href="/adopt-a-paw/items/index" class="btn btn-info">Item Listing</a>
<div>
    <h2 class="display-6">Item Show Page</h2>
    <div class="row">

            <div class="card" style="width: 18rem">
            <img src="{{item.images}}" alt="img">
                <h5 class="card-header">{{item.title}}</h5>
                <div class="card-body">
                    <ul class='itemInfo'>
                    <li>Price: {{item.price}}</li>
                    <li>Description: {{item.item_description}}</li>
                    <li>Location: {{item.location}}</li>
                    <li>Name of contact: {{item.name_of_contact}}</li>
                    <li>Contact info: {{item.contact_info}}</li>
                    </ul>
                </div>
                <a href="/items/{{item._id}}/edit" class="btn btn-primary">Edit Item</a> 
                <form action="/adopt-a-paw/items/{{item._id}}/?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form> 
            </div>

    </div>
</div>
{% endblock %}