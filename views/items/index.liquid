{% layout 'layout.liquid' %}

{% block content %}
<a href="/adopt-a-paw/home" class="btn btn-info">Home</a>

<div><a href="/adopt-a-paw/items/new">Create New Item Post</a>
</div>
<div>
    <h2 class="display-6">All Item Listing</h2>
    <div class="row">

        {% for item in items %}
            <div class="card" style="width: 18rem">
            <img src="`${item.images}`" alt="img">
                <a href="./{{item._id}}"><h5 class="card-header">{{item.title}}</h5></a>
                <div class="card-body">
                    <ul class='itemInfo'>
                    <li>Cost: {{item.price}}</li>
                    <li>Location: {{item.location}}</li>
                    </ul>
                    
                    
                </div>
                <a href="{{item._id}}/edit" class="btn btn-primary">Edit Item</a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %} 